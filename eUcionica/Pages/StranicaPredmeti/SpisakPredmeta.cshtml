@page
@model eUcionica.Pages.StranicaPremeti.SpisakPredmetaModel

@{
    ViewData["Title"] = "Spisak predmeta";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-3">
    <div class="row">
        <div class="col">
            <h3>Spisak svih predmeta</h3>
            <button type="button" class="btn btn-success" onclick="window.location.href='@Url.Page("DodavanjePredmeta")'">Dodaj novi predmet</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-striped" style="width:900px">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Naziv predmeta</th>
                        <th scope="col" style="padding-left:400px">Upravljanje predmetom</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Predmet)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.NazivPredmeta)</td>
                            <td>
                                <div class="btn-group" role="group" style="margin-left:280px">
                                    <button type="button" class="btn btn-danger" onclick="window.location.href='@Url.Page("./BrisanjePredmeta", new { id = item.ID })'">Obriši predmet</button>
                                    <button type="button" class="btn btn-primary mx-1" onclick="window.location.href='@Url.Page("./MenjanjePredmeta", new { id = item.ID })'">Izmeni predmet</button>
                                    <button type="button" class="btn btn-primary mx-1" onclick="window.location.href='@Url.Page("./DetaljiPredmeta", new { id = item.ID })'">Detalji predmeta</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>