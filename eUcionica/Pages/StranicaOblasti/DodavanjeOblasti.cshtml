@page
@model eUcionica.Pages.StranicaOblasti.DodavanjeOblastiModel

@{
    ViewData["Title"] = "Dodavanje oblasti";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<div class="container border rounded p-3" style="background-color: #f2f2f2; width: 700px;">
    <h3>Dodavanje oblasti</h3>

    <form method="post">
        <div class="form-group">
            <label asp-for="NewOblast.PredmetID" class="control-label">Predmet</label>
            <select asp-for="NewOblast.PredmetID" class="form-control" asp-items="@(new SelectList(Model.Predmeti, "ID", "NazivPredmeta"))">
                <option value="">Izaberite predmet</option>
            </select>
            <span asp-validation-for="NewOblast.PredmetID" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewOblast.Name" class="control-label">Naziv oblasti</label>
            <input asp-for="NewOblast.Name" class="form-control" />
            <span asp-validation-for="NewOblast.Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary">Sačuvaj</button>
            <a asp-page="./SpisakOblasti" class="btn btn-secondary ml-2">Odustani</a>


        </div>
    </form>
</div>
