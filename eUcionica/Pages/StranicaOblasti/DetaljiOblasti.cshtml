@page
@model eUcionica.Pages.StranicaOblasti.DetaljiOblastiModel

@{
    ViewData["Title"] = "Detalji oblasti";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card" style="width: 900px; background-color: #f5f5f5;">
        <div class="card-body text-center">
            <h3 class="card-title">Detalji oblasti  <a href="@Url.Page("SpisakOblasti")" class="text-black">&#8592;</a></h3>
            <hr />
            @if (Model.Oblast != null)
            {
                <h5 class="card-subtitle mb-2">Naziv oblasti: @Model.Oblast.Name</h5> 
                @if (Model.Oblast.Predmet != null)
                {
                    <h6 class="card-subtitle mb-3 text-muted">Predmet: @Model.Oblast.Predmet.NazivPredmeta</h6>
                }
            }
            <h6 class="card-subtitle mb-2">Pitanja:</h6>
            <div class="row justify-content-center">
                @if (Model.Pitanja != null)
                {
                    @foreach (var pitanje in Model.Pitanja)
                    {
                        <div class="col-md-5 mb-3" style="width:400px">
                            <img src="~/images/@pitanje.PitanjeSlika" class="img-fluid rounded" alt="Pitanje slika">
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
